{
  "name": "voyager-rn-automation",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "wdio": "wdio run wdio.conf.ts",
    "run:web-e2e": "node ./scripts/run-web-e2e.js",
    "test": "npm run test:headless",
    "test:headless": "HEADLESS=true node ./scripts/run-web-e2e.js",
    "test:headed": "HEADLESS=false node ./scripts/run-web-e2e.js",
    "test:watch": "HEADLESS=false node ./scripts/run-web-e2e.js",
    "test:unit": "jest",
  "test:ios": "PLATFORM=ios wdio run wdio.mobile.conf.ts",
  "test:ios:headed": "PLATFORM=ios HEADLESS=false wdio run wdio.mobile.conf.ts",
  "test:ios:headless": "PLATFORM=ios HEADLESS=true wdio run wdio.mobile.conf.ts",
  "test:ios:headed:metro": "HEADLESS=false node ./scripts/run-ios-e2e.js",
  "test:ios:headless:metro": "HEADLESS=true node ./scripts/run-ios-e2e.js",
  "test:android": "PLATFORM=android wdio run wdio.mobile.conf.ts",
  "test:android:headed": "PLATFORM=android HEADLESS=false wdio run wdio.mobile.conf.ts",
  "test:android:headed:clean": "(which adb >/dev/null 2>&1 && adb uninstall host.exp.exponent >/dev/null 2>&1) || true && PLATFORM=android HEADLESS=false wdio run wdio.mobile.conf.ts",
  "test:android:headless": "PLATFORM=android HEADLESS=true wdio run wdio.mobile.conf.ts",
  "test:android:headed:metro": "HEADLESS=false node ./scripts/run-android-e2e.js",
  "test:android:headless:metro": "HEADLESS=true node ./scripts/run-android-e2e.js",
    "appium": "appium --relaxed-security --log appium.log",
    "ts-node": "ts-node"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@wdio/appium-service": "^9.20.0",
    "@wdio/cli": "^8.23.0",
    "@wdio/devtools-service": "^8.23.0",
    "@wdio/globals": "^8.23.0",
    "@wdio/local-runner": "^8.23.0",
    "@wdio/mocha-framework": "^8.23.0",
    "@wdio/spec-reporter": "^8.23.0",
  "appium": "2.19.0",
  "appium-uiautomator2-driver": "2.34.1",
  "appium-xcuitest-driver": "5.10.0",
    "chai": "^4.3.7",
    "jest": "^29.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0",
    "webdriverio": "^8.23.0"
  }
}
